<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lammy.androidutils.camera.CameraActivity">


    <SurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/surface"
        />

    <com.example.lammy.androidutils.camera.lammyCamera2
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/camera_view"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="transfer"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bt_changeCamera"
        android:text="滤镜"
        android:textAllCaps="false"
        android:id="@+id/bt_view"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeCamera"
        android:layout_alignParentBottom="true"
        android:text="相机"
        android:textAllCaps="false"
        android:id="@+id/bt_changeCamera"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="takePhoto"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="拍照"
        android:textAllCaps="false"
        android:id="@+id/takePhoto"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setFlashMode"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/takePhoto"
        android:text="闪光"
        android:textAllCaps="false"
        android:id="@+id/flash"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="fps"
        android:id="@+id/fps_view"
        android:layout_marginLeft="3dp"
        />

</RelativeLayout>
